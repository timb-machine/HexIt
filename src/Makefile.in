PACKAGE=HexIt
CC = @CC@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
MKINSTALLDIRS = ./mkinstalldirs
INSTALL = @INSTALL@
prefix=@prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
BINDIR = @bindir@
DOCDIR = @docdir@
MANDIR = @mandir@
RM = @RM@

all: HexIt

HexIt: HexIt.o
	${CC} ${LDFLAGS} ${LIBS} HexIt.o -o HexIt

HexIt.o: HexIt.c
	${CC} ${CFLAGS} -c HexIt.c

install: HexIt INSTALL TODO HexIt.1
	${MKINSTALLDIRS} "${DESTDIR}${BINDIR}" "${DESTDIR}${DOCDIR}" "${DESTDIR}${MANDIR}" "${DESTDIR}${MANDIR}/man1"
	${INSTALL} -s -m 755 -o root -g root HexIt "${DESTDIR}${BINDIR}"
	${INSTALL} -m 644 -o root -g root ../docs/ChangeLog "${DESTDIR}${DOCDIR}"
	${INSTALL} -m 644 -o root -g root ../docs/COPYING "${DESTDIR}${DOCDIR}"
	${INSTALL} -m 644 -o root -g root ../docs/INSTALL "${DESTDIR}${DOCDIR}"
	${INSTALL} -m 644 -o root -g root ../docs/TODO "${DESTDIR}${DOCDIR}"
	${INSTALL} -m 644 -o root -g root HexIt.1 "${DESTDIR}${MANDIR}/man1"

clean:
	@${RM} -f *.so *.so.* *.o *~ HexIt

distclean: clean
	@${RM} -rf autom4te.cache config.cache config.log configure Makefile
